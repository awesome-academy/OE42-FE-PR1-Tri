extend ./layouts/layout
block append links
    link(rel="stylesheet", href="./css/style.css")

block main 
    include ./variables/variable_homepage
    include ./variables/variable_links
    main#main 
        section.section__slides 
            #carouselExampleIndicators.carousel.slide(data-ride="carousel") 
                ol.carousel-indicators
                    each slide in data_slides
                        if slide == "0"
                            +data_slide(slide)(class="active")
                        else 
                            +data_slide(slide)
                .carousel-inner
                    each img, index in image_slides
                        if index == 0
                            +carousel-item(img)(class="active")
                        else
                            +carousel-item(img)
        section.section__hot-products 
            .container 
                .product-categories 
                    span Sản phẩm nổi bật 
                .row.product 
                    .col-12.col-md-6.product-left
                        .product-left-top.img-big
                            div.img  
                                img(src=`${link_images}/spx2-4.png`, alt="spx2-4.png")
                                span.new New
                                div 
                                    button Mua ngay 
                                    a(href="#")
                                        i(class=search_product) 
                            div.description 
                                span.name-product Cây chân chim 
                                .rating-box 
                                    span.rating 
                                .price 
                                    span.price-new 250.000 đ
                                    span.price-old 250.000 đ
                        .product-left-bottom.img-small
                            div.wrapper
                                .img 
                                    img(src=`${link_images}/spx2-11.png`, alt="spx2-11.png")
                                    span.sale -50%
                                    div 
                                        button Mua ngay 
                                        a(href="#")
                                            i(class=search_product)
                                .description 
                                    span.name-product Cây cọ ta
                                    .rating-box 
                                        span.rating 
                                    .price 
                                        span.price-new 150.000 đ
                                        span.price-old 250.000 đ
                            div.wrapper
                                .img 
                                    img(src=`${link_images}/spx2-6.png`, alt="spx2-6.png") 
                                    div 
                                        button Mua ngay 
                                        a(href="#")
                                            i(class=search_product)
                                .description 
                                    span.name-product Cây dứa nhỏ
                                    .rating-box 
                                        span.rating 
                                    .price 
                                        span.price-new 375.000 đ
                                        span.price-old 250.000 đ
                    .col-12.col-md-6.product-right
